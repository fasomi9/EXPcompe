@loader.tds
class ComplementsMod(loader.Module):
    """Модуль который дарит счастье девушке/парню"""

    strings = {"name": "Hope"}

    async def hdcmd(self, message: Message):
        """Эта команда дарит счастье девушке"""

        for i in [
            "Пожалуйста прочти до конца",
            "......",
            "ты прекрасна как всегда",
            "ты самая неповторимая",
            "головакружительная",
            "самая идеальная из идеалов",
            "самая красива",
            "самая умная",
            "самая незабываемая",
            "самая лучшая",
            "Маленькая принцесса моя",
            "счастье мое",
        ]:
            message = await utils.answer(message, i)
            await asyncio.sleep(1)

    async def hbcmd(self, message: Message):
        """Эта команда дарит счастье парню"""

        for i in [
           "Пожалуйста прочти до конца",
            "......",
            "ты прекрасный как всегда",
            "ты самый неповторимый",
            "ты такой головакружительный, что аж готов принимать тебя вместо котиков",
            "самый идеальный из идеалов",
            "самый красивый",
            "самый умный",
            "самый незабываемый",
            "самый лучший",
            "Маленький принц мой",
            "счастье мое"
        ]:
            message = await utils.answer(message, i)
            await asyncio.sleep(1)
